{
    "name": "quiz-player-app",
    "description": "Multiplayer quiz app built on Salesforce technology (player app)",
    "version": "3.0.2",
    "private": true,
    "author": "pozil",
    "bugs": "https://github.com/developerforce/quiz-player-app/issues",
    "scripts": {
        "lint": "npm run lint:lwc && npm run lint:aura",
        "lint:lwc": "eslint **/lwc/**",
        "lint:aura": "sfdx force:lightning:lint **/aura/** --exit",
        "test": "npm run lint && npm run test:unit",
        "test:unit": "lwc-jest",
        "test:unit:watch": "lwc-jest --watch",
        "test:unit:debug": "lwc-jest --debug",
        "prettier": "prettier --write '**/*.{cls,cmp,component,css,html,js,json,md,page,trigger,yaml,yml}'",
        "prettier:verify": "prettier --list-different '**/*.{cls,cmp,component,css,html,js,json,md,page,trigger,yaml,yml}'",
        "postinstall": "node bin/check-version.js"
    },
    "dependencies": {
        "@grpc/grpc-js": "^1.14.0",
        "@salesforce/eslint-config-lwc": "^4.0.0",
        "@salesforce/sfdx-lwc-jest": "^7.1.0",
        "dotenv": "^17.2.2",
        "eslint-plugin-import": "^2.32.0",
        "eslint-plugin-jest": "^29.0.1",
        "husky": "^9.1.7",
        "jsforce": "^3.10.7",
        "lwc": "^8.22.3",
        "normalize.css": "^8.0.1",
        "prettier": "^3.6.2",
        "prettier-plugin-apex": "^2.2.6",
        "using": "^1.0.0-alpha-1",
        "ws": "^8.16.0"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged && npm run lint:aura"
        }
    },
    "lint-staged": {
        "**/*.{css,html,js,json,md,yaml,yml}": [
            "prettier --write"
        ],
        "**/modules/**/*.js": [
            "eslint"
        ]
    },
    "repository": "pozil/quiz",
    "volta": {
        "node": "20.12.2"
    },
    "devDependencies": {
        "@eslint/eslintrc": "^3.3.1",
        "@eslint/js": "^9.36.0",
        "@typescript-eslint/eslint-plugin": "^8.45.0",
        "@typescript-eslint/parser": "^8.45.0",
        "eslint": "^9.36.0",
        "globals": "^16.4.0",
        "typescript": "^4.9.5"
    }
}
